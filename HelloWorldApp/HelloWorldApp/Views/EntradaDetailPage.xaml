<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldApp.Views.EntradaDetailPage"
             Title="{Binding HoraAcorda}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="HoraAcorda:" FontSize="Medium" />
        <Label Text="{Binding Entrada.HoraAcorda}" FontSize="Small"/>
        <Label Text="HoraDorme:" FontSize="Medium" />
        <Label Text="{Binding Entrada.HoraDorme}" FontSize="Small"/>
    </StackLayout>
</ContentPage>